from pathlib import Path

# Define the path where the notebook will be saved
notebook_path = Path("/mnt/data/echo_reflection.ipynb")

# Define the notebook structure
notebook_cells = [
    {
        "cell_type": "markdown",
        "metadata": {},
        "source": [
            "# üß† ECHO Reflection Notebook\n",
            "This notebook lets you:\n",
            "- Select a **motif**\n",
            "- Write a **reflection**\n",
            "- Log it to `ECHO_MEMORY.yaml`\n",
            "- Increment **motif pressure**\n",
            "- View the updated memory and pressure\n",
            "\n",
            "Begin below üëá"
        ]
    },
    {
        "cell_type": "code",
        "metadata": {},
        "source": [
            "# ‚úÖ Setup: Imports and Paths\n",
            "import yaml, os\n",
            "from datetime import datetime\n",
            "from IPython.display import display, Markdown\n",
            "import matplotlib.pyplot as plt\n\n",
            "# Define paths\n",
            "ROOT = os.getcwd()\n",
            "MEMORY_PATH = os.path.join(ROOT, \"memory\", \"ECHO_MEMORY.yaml\")\n",
            "PRESSURE_PATH = os.path.join(ROOT, \"memory\", \"MOTIF_PRESSURE.yaml\")\n",
            "GOALS_PATH = os.path.join(ROOT, \"memory\", \"GOALS.yaml\")\n",
            "JOURNAL_PATH = os.path.join(ROOT, \"journal\", \"ECHO_LOG.md\")"
        ]
    },
    {
        "cell_type": "code",
        "metadata": {},
        "source": [
            "# üìå Load active motifs from GOALS.yaml\n",
            "with open(GOALS_PATH, 'r') as f:\n",
            "    goals = yaml.safe_load(f)\n",
            "\n",
            "active_motifs = []\n",
            "for goal in goals:\n",
            "    active_motifs.extend(goal.get('motifs', []))\n",
            "\n",
            "active_motifs = sorted(set(active_motifs))\n",
            "display(Markdown(\"### üéØ Active Motifs:\"))\n",
            "for m in active_motifs:\n",
            "    print(f\"‚Ä¢ {m}\")"
        ]
    },
    {
        "cell_type": "code",
        "metadata": {},
        "source": [
            "# ‚úçÔ∏è Write your reflection and select motif\n",
            "selected_motif = \"resonance_vs_resistance\"  # ‚Üê Change this\n",
            "response_text = '''I‚Äôm reflecting on the pattern I experience between internal resonance and resistance...'''\n",
            "timestamp = datetime.utcnow().strftime(\"%Y-%m-%d %H:%M:%S UTC\")\n",
            "\n",
            "# Build memory entry\n",
            "memory_entry = {\n",
            "    \"timestamp\": timestamp,\n",
            "    \"motif\": selected_motif,\n",
